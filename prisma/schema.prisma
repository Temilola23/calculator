// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Use SQLite for local development simplicity
  url      = env("DATABASE_URL")
}

model Calculation {
  id        String   @id @default(uuid())
  expression String
  result    String
  createdAt DateTime @default(now())
}